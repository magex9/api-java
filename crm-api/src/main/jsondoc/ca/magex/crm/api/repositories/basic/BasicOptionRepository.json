{
  "name": "BasicOptionRepository",
  "package": "ca.magex.crm.api.repositories.basic",
  "imports": {
    "Collectors": "java.util.stream",
    "Stream": "java.util.stream",
    "SerializationUtils": "org.apache.commons.lang3",
    "OptionsFilter": "ca.magex.crm.api.filters",
    "PageBuilder": "ca.magex.crm.api.filters",
    "Paging": "ca.magex.crm.api.filters",
    "CrmUpdateNotifier": "ca.magex.crm.api.observer",
    "CrmOptionRepository": "ca.magex.crm.api.repositories",
    "CrmStore": "ca.magex.crm.api.repositories",
    "FilteredPage": "ca.magex.crm.api.system",
    "Identifier": "ca.magex.crm.api.system",
    "Option": "ca.magex.crm.api.system"
  },
  "type": "class",
  "modifiers": ["public"],
  "implements": ["CrmOptionRepository"],
  "constructors": [{
    "name": "BasicOptionRepository",
    "modifiers": ["public"],
    "parameters": [
      {
        "name": "store",
        "type": "CrmStore"
      },
      {
        "name": "notifier",
        "type": "CrmUpdateNotifier"
      }
    ],
    "body": "{\n    this.store = store;\n    this.notifier = notifier;\n}"
  }],
  "fields": [
    {
      "name": "store",
      "modifiers": ["private"],
      "type": "CrmStore"
    },
    {
      "name": "notifier",
      "modifiers": ["private"],
      "type": "CrmUpdateNotifier"
    }
  ],
  "methods": [
    {
      "name": "apply",
      "modifiers": ["private"],
      "type": {
        "class": "Stream",
        "generics": ["Option"]
      },
      "parameters": [{
        "name": "filter",
        "type": "OptionsFilter"
      }],
      "body": "{\n    return store.getOptions().values().stream().filter(p -> filter.apply(p));\n}"
    },
    {
      "name": "findOptions",
      "modifiers": ["public"],
      "type": {
        "class": "FilteredPage",
        "generics": ["Option"]
      },
      "annotations": [{"name": "Override"}],
      "parameters": [
        {
          "name": "filter",
          "type": "OptionsFilter"
        },
        {
          "name": "paging",
          "type": "Paging"
        }
      ],
      "body": "{\n    return PageBuilder.buildPageFor(filter, apply(filter).map(i -> SerializationUtils.clone(i)).sorted(filter.getComparator(paging)).collect(Collectors.toList()), paging);\n}"
    },
    {
      "name": "countOptions",
      "modifiers": ["public"],
      "type": "long",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "filter",
        "type": "OptionsFilter"
      }],
      "body": "{\n    return apply(filter).count();\n}"
    },
    {
      "name": "findOption",
      "modifiers": ["public"],
      "type": "Option",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "optionId",
        "type": "Identifier"
      }],
      "body": "{\n    return store.getOptions().get(optionId);\n}"
    },
    {
      "name": "saveOption",
      "modifiers": ["public"],
      "type": "Option",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "option",
        "type": "Option"
      }],
      "body": "{\n    notifier.optionUpdated(System.nanoTime(), option.getOptionId());\n    store.getOptions().put(option.getOptionId(), option);\n    return option;\n}"
    }
  ]
}