{
  "name": "BasicPersonRepository",
  "package": "ca.magex.crm.api.repositories.basic",
  "imports": {
    "Collectors": "java.util.stream",
    "Stream": "java.util.stream",
    "SerializationUtils": "org.apache.commons.lang3",
    "PersonDetails": "ca.magex.crm.api.crm",
    "PersonSummary": "ca.magex.crm.api.crm",
    "PageBuilder": "ca.magex.crm.api.filters",
    "Paging": "ca.magex.crm.api.filters",
    "PersonsFilter": "ca.magex.crm.api.filters",
    "CrmUpdateNotifier": "ca.magex.crm.api.observer",
    "CrmPersonRepository": "ca.magex.crm.api.repositories",
    "CrmStore": "ca.magex.crm.api.repositories",
    "FilteredPage": "ca.magex.crm.api.system",
    "Identifier": "ca.magex.crm.api.system"
  },
  "type": "class",
  "modifiers": ["public"],
  "implements": ["CrmPersonRepository"],
  "constructors": [{
    "name": "BasicPersonRepository",
    "modifiers": ["public"],
    "parameters": [
      {
        "name": "store",
        "type": "CrmStore"
      },
      {
        "name": "notifier",
        "type": "CrmUpdateNotifier"
      }
    ],
    "body": "{\n    this.store = store;\n    this.notifier = notifier;\n}"
  }],
  "fields": [
    {
      "name": "store",
      "modifiers": ["private"],
      "type": "CrmStore"
    },
    {
      "name": "notifier",
      "modifiers": ["private"],
      "type": "CrmUpdateNotifier"
    }
  ],
  "methods": [
    {
      "name": "apply",
      "modifiers": ["private"],
      "type": {
        "class": "Stream",
        "generics": ["PersonDetails"]
      },
      "parameters": [{
        "name": "filter",
        "type": "PersonsFilter"
      }],
      "body": "{\n    return store.getPersons().values().stream().filter(p -> filter.apply(p));\n}"
    },
    {
      "name": "findPersonDetails",
      "modifiers": ["public"],
      "type": {
        "class": "FilteredPage",
        "generics": ["PersonDetails"]
      },
      "annotations": [{"name": "Override"}],
      "parameters": [
        {
          "name": "filter",
          "type": "PersonsFilter"
        },
        {
          "name": "paging",
          "type": "Paging"
        }
      ],
      "body": "{\n    return PageBuilder.buildPageFor(filter, apply(filter).map(i -> SerializationUtils.clone(i)).sorted(filter.getComparator(paging)).collect(Collectors.toList()), paging);\n}"
    },
    {
      "name": "findPersonSummary",
      "modifiers": ["public"],
      "type": {
        "class": "FilteredPage",
        "generics": ["PersonSummary"]
      },
      "annotations": [{"name": "Override"}],
      "parameters": [
        {
          "name": "filter",
          "type": "PersonsFilter"
        },
        {
          "name": "paging",
          "type": "Paging"
        }
      ],
      "body": "{\n    return PageBuilder.buildPageFor(filter, apply(filter).map(i -> SerializationUtils.clone(i)).sorted(filter.getComparator(paging)).collect(Collectors.toList()), paging);\n}"
    },
    {
      "name": "countPersons",
      "modifiers": ["public"],
      "type": "long",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "filter",
        "type": "PersonsFilter"
      }],
      "body": "{\n    return apply(filter).count();\n}"
    },
    {
      "name": "findPersonDetails",
      "modifiers": ["public"],
      "type": "PersonDetails",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "personId",
        "type": "Identifier"
      }],
      "body": "{\n    return store.getPersons().get(personId);\n}"
    },
    {
      "name": "findPersonSummary",
      "modifiers": ["public"],
      "type": "PersonSummary",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "personId",
        "type": "Identifier"
      }],
      "body": "{\n    return findPersonDetails(personId);\n}"
    },
    {
      "name": "savePersonDetails",
      "modifiers": ["public"],
      "type": "PersonDetails",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "person",
        "type": "PersonDetails"
      }],
      "body": "{\n    notifier.personUpdated(System.nanoTime(), person.getPersonId());\n    store.getPersons().put(person.getPersonId(), person);\n    return person;\n}"
    }
  ]
}