{
  "name": "BasicUserRepository",
  "package": "ca.magex.crm.api.repositories.basic",
  "imports": {
    "Collectors": "java.util.stream",
    "Stream": "java.util.stream",
    "SerializationUtils": "org.apache.commons.lang3",
    "PageBuilder": "ca.magex.crm.api.filters",
    "Paging": "ca.magex.crm.api.filters",
    "UsersFilter": "ca.magex.crm.api.filters",
    "CrmUpdateNotifier": "ca.magex.crm.api.observer",
    "CrmStore": "ca.magex.crm.api.repositories",
    "CrmUserRepository": "ca.magex.crm.api.repositories",
    "User": "ca.magex.crm.api.roles",
    "FilteredPage": "ca.magex.crm.api.system",
    "Identifier": "ca.magex.crm.api.system"
  },
  "type": "class",
  "modifiers": ["public"],
  "implements": ["CrmUserRepository"],
  "constructors": [{
    "name": "BasicUserRepository",
    "modifiers": ["public"],
    "parameters": [
      {
        "name": "store",
        "type": "CrmStore"
      },
      {
        "name": "notifier",
        "type": "CrmUpdateNotifier"
      }
    ],
    "body": "{\n    this.store = store;\n    this.notifier = notifier;\n}"
  }],
  "fields": [
    {
      "name": "store",
      "modifiers": ["private"],
      "type": "CrmStore"
    },
    {
      "name": "notifier",
      "modifiers": ["private"],
      "type": "CrmUpdateNotifier"
    }
  ],
  "methods": [
    {
      "name": "apply",
      "modifiers": ["private"],
      "type": {
        "class": "Stream",
        "generics": ["User"]
      },
      "parameters": [{
        "name": "filter",
        "type": "UsersFilter"
      }],
      "body": "{\n    return store.getUsers().values().stream().filter(p -> filter.apply(p));\n}"
    },
    {
      "name": "findUsers",
      "modifiers": ["public"],
      "type": {
        "class": "FilteredPage",
        "generics": ["User"]
      },
      "annotations": [{"name": "Override"}],
      "parameters": [
        {
          "name": "filter",
          "type": "UsersFilter"
        },
        {
          "name": "paging",
          "type": "Paging"
        }
      ],
      "body": "{\n    return PageBuilder.buildPageFor(filter, apply(filter).map(i -> SerializationUtils.clone(i)).sorted(filter.getComparator(paging)).collect(Collectors.toList()), paging);\n}"
    },
    {
      "name": "countUsers",
      "modifiers": ["public"],
      "type": "long",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "filter",
        "type": "UsersFilter"
      }],
      "body": "{\n    return apply(filter).count();\n}"
    },
    {
      "name": "findUser",
      "modifiers": ["public"],
      "type": "User",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "userId",
        "type": "Identifier"
      }],
      "body": "{\n    return store.getUsers().get(userId);\n}"
    },
    {
      "name": "saveUser",
      "modifiers": ["public"],
      "type": "User",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "user",
        "type": "User"
      }],
      "body": "{\n    notifier.userUpdated(System.nanoTime(), user.getUserId());\n    store.getUsers().put(user.getUserId(), user);\n    return user;\n}"
    }
  ]
}