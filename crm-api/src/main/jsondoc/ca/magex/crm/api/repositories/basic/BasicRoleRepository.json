{
  "name": "BasicRoleRepository",
  "package": "ca.magex.crm.api.repositories.basic",
  "imports": {
    "Collectors": "java.util.stream",
    "Stream": "java.util.stream",
    "SerializationUtils": "org.apache.commons.lang3",
    "PageBuilder": "ca.magex.crm.api.filters",
    "Paging": "ca.magex.crm.api.filters",
    "RolesFilter": "ca.magex.crm.api.filters",
    "CrmUpdateNotifier": "ca.magex.crm.api.observer",
    "CrmRoleRepository": "ca.magex.crm.api.repositories",
    "CrmStore": "ca.magex.crm.api.repositories",
    "Role": "ca.magex.crm.api.roles",
    "FilteredPage": "ca.magex.crm.api.system",
    "Identifier": "ca.magex.crm.api.system"
  },
  "type": "class",
  "modifiers": ["public"],
  "implements": ["CrmRoleRepository"],
  "constructors": [{
    "name": "BasicRoleRepository",
    "modifiers": ["public"],
    "parameters": [
      {
        "name": "store",
        "type": "CrmStore"
      },
      {
        "name": "notifier",
        "type": "CrmUpdateNotifier"
      }
    ],
    "body": "{\n    this.store = store;\n    this.notifier = notifier;\n}"
  }],
  "fields": [
    {
      "name": "store",
      "modifiers": ["private"],
      "type": "CrmStore"
    },
    {
      "name": "notifier",
      "modifiers": ["private"],
      "type": "CrmUpdateNotifier"
    }
  ],
  "methods": [
    {
      "name": "apply",
      "modifiers": ["private"],
      "type": {
        "class": "Stream",
        "generics": ["Role"]
      },
      "parameters": [{
        "name": "filter",
        "type": "RolesFilter"
      }],
      "body": "{\n    return store.getRoles().values().stream().filter(p -> filter.apply(p));\n}"
    },
    {
      "name": "findRoles",
      "modifiers": ["public"],
      "type": {
        "class": "FilteredPage",
        "generics": ["Role"]
      },
      "annotations": [{"name": "Override"}],
      "parameters": [
        {
          "name": "filter",
          "type": "RolesFilter"
        },
        {
          "name": "paging",
          "type": "Paging"
        }
      ],
      "body": "{\n    return PageBuilder.buildPageFor(filter, apply(filter).map(i -> SerializationUtils.clone(i)).sorted(filter.getComparator(paging)).collect(Collectors.toList()), paging);\n}"
    },
    {
      "name": "countRoles",
      "modifiers": ["public"],
      "type": "long",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "filter",
        "type": "RolesFilter"
      }],
      "body": "{\n    return apply(filter).count();\n}"
    },
    {
      "name": "findRole",
      "modifiers": ["public"],
      "type": "Role",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "roleId",
        "type": "Identifier"
      }],
      "body": "{\n    return store.getRoles().get(roleId);\n}"
    },
    {
      "name": "saveRole",
      "modifiers": ["public"],
      "type": "Role",
      "annotations": [{"name": "Override"}],
      "parameters": [{
        "name": "role",
        "type": "Role"
      }],
      "body": "{\n    notifier.roleUpdated(System.nanoTime(), role.getRoleId());\n    store.getRoles().put(role.getRoleId(), role);\n    return role;\n}"
    }
  ]
}